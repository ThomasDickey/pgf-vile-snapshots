wordmov$O:	$(VILE_CFG) wordmov.c 

main$O:	$(VILE_CFG) main.c	nevars.h

$(SCREEN)$O:	$(VILE_CFG) $(SCREEN).c 

nebind.h \
nefunc.h \
nefkeys.h \
nename.h :	cmdtbl $(MKTBLS)
	@echo making $@
	$(MKTBLS) cmdtbl

nevars.h \
nemode.h:	modetbl $(MKTBLS)
	@echo making $@
	$(MKTBLS) modetbl
